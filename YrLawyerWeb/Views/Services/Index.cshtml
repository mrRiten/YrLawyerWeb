@model List<Service>

<h2>Все услуги</h2>

@foreach (var item in Model)
{
    <div>
        <h3>@item.Title</h3>
        <img src="@item.Img" width="200" />
        <p>@item.Description</p>
        <a href="@Url.Action("Order", new { id = item.Id })">Записаться</a> |
        <a href="@Url.Action("Feedback", new { id = item.Id })">Отзывы</a>
    </div>
}
