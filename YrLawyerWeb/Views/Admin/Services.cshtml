@model List<Service>

<section class="services">
    <div class="container">
        <div class="wrapper">
            <h2 class="title">Услуги</h2>

            <form asp-action="CreateService" method="post" enctype="multipart/form-data" class="create-service-form">
                <div class="form-group">
                    <label class="label" for="Title">Название</label>
                    <input name="Title" id="Title" placeholder="Название" class="input" required />
                </div>
                <div class="form-group">
                    <label class="label" for="Description">Описание</label>
                    <input name="Description" id="Description" placeholder="Описание" class="input" required />
                </div>
                <div class="form-group">
                    <label class="label" for="ImageFile">Изображение</label>
                    <input type="file" name="ImageFile" id="ImageFile" class="input" />
                </div>
                <button type="submit" class="submit-button">Добавить</button>
            </form>

            <table class="services-table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Описание</th>
                        <th>Картинка</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <form asp-action="EditService" method="post" enctype="multipart/form-data" class="edit-service-form">
                                <input type="hidden" name="Id" value="@s.Id" />
                            <td><input name="Title" value="@s.Title" class="input" required /></td>
                            <td><input name="Description" value="@s.Description" class="input" required /></td>
                            <td>
                                <img src="@s.Img" alt="Изображение" style="max-height:100px; display:block; margin-bottom:10px;" />
                                <input type="file" name="ImageFile" class="input" />
                            </td>
                            <td class="actions">
                                <button type="submit" class="action-button">Сохранить</button>
                                <a href="/Admin/DeleteService/@s.Id" class="action-link">Удалить</a>
                            </td>
                            </form>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


<style>
    .services {
        margin-top: 30px;
        margin-bottom: 30px;
    }

        .services .wrapper {
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: center;
        }

        .services .title {
            font-size: 24px;
            text-align: center;
            font-weight: 600;
            font-family: 'KoPub Batang';
        }

    .create-service-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 100%;
        max-width: 400px;
        margin-bottom: 20px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .label {
        font-size: 16px;
        font-weight: 600;
    }

    .input {
        padding: 10px;
        font-size: 18px;
        border: #132D65 4px solid;
        border-radius: 20px;
        background-color: #fff;
        width: 100%;
        box-sizing: border-box;
        min-height: 48px;
    }

    .submit-button {
        font-size: 18px;
        font-weight: 600;
        border: #132D65 4px solid;
        border-radius: 20px;
        padding: 10px 20px;
        background-color: #fff;
        cursor: pointer;
        align-self: center;
        transition: background-color 0.3s;
    }

        .submit-button:hover {
            background-color: #132D65;
            color: #fff;
        }

    .services-table {
        width: 100%;
        max-width: 1000px;
        border-collapse: collapse;
    }

        .services-table th,
        .services-table td {
            padding: 15px;
            border: #132D65 2px solid;
            text-align: left;
            font-size: 16px;
            vertical-align: middle;
        }

        .services-table th {
            background-color: #132D65;
            color: #fff;
            font-weight: 600;
        }

        .services-table td {
            background-color: #fff;
        }

    .edit-service-form {
        display: contents;
    }

    .actions {
        display: flex;
        flex-direction: column;
        gap: 15px;
        align-items: center;
        justify-content: center;
        padding: 15px;
        min-height: 48px;
        border: none !important; /* Убрана граница для столбца "Действия" */
    }

    .action-button {
        font-size: 16px;
        font-weight: 600;
        border: #132D65 4px solid;
        border-radius: 20px;
        padding: 10px 15px;
        background-color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
        min-width: 100px;
        text-align: center;
        min-height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .action-button:hover {
            background-color: #132D65;
            color: #fff;
        }

    .action-link {
        font-size: 16px;
        font-weight: 600;
        color: #d32f2f;
        text-decoration: none;
        border: #d32f2f 4px solid;
        border-radius: 20px;
        padding: 10px 15px;
        transition: background-color 0.3s;
        min-width: 100px;
        text-align: center;
        min-height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .action-link:hover {
            background-color: #d32f2f;
            color: #fff;
        }
</style>