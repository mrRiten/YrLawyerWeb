<style>
    .contacts {
        margin-top: 30px;
        margin-bottom: 30px;
    }

        .contacts .wrapper {
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: center;
        }

        .contacts .title {
            font-size: 24px;
            text-align: center;
            font-weight: 600;
            font-family: 'KoPub Batang';
        }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 100%;
        max-width: 600px;
    }

    .contact-item {
        display: flex;
        flex-direction: column;
        gap: 5px;
        padding: 15px;
        border: #132D65 4px solid;
        border-radius: 20px;
        background-color: #fff;
    }

    .label {
        font-size: 16px;
        font-weight: 600;
        color: #132D65;
    }

    .value {
        font-size: 16px;
        font-weight: 500;
        color: #333;
        text-decoration: none;
    }

        .value:hover {
            text-decoration: underline;
            color: #132D65;
        }

    .map-wrapper {
        width: 100%;
        max-width: 800px;
        margin-top: 20px;
    }

    .subtitle {
        font-size: 20px;
        text-align: center;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .map-placeholder iframe {
        border: #132D65 4px solid;
        border-radius: 20px;
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
    }

</style>