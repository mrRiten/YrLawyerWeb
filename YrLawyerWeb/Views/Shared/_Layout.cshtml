<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Яр Юрист - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fonts/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/YrLawyerWeb.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header class="header">
        <div class="header__container">
            <div class="header__row">
                <div class="header__logo">Ярославский юрист</div>

                <div class="header__contacts">
                    <p>Телефон: +7 (4852) 66-49-39</p>
                    <p>Адрес: ул. Трефолева 12 Ярославль</p>
                </div>
            </div>

            <nav class="nav">
                <ul class="header__menu">
                    <li><a href="@Url.Action("Index", "Home")">Главная</a></li>
                    <li><a href="@Url.Action("Index", "Services")">Услуги</a></li>
                    <li><a href="@Url.Action("AllFeedbacks", "Services")">Отзывы</a></li>
                    <li><a href="@Url.Action("About", "Home")">О компании</a></li>
                    <li><a href="@Url.Action("Contacts", "Home")">Контакты</a></li>
                    <li><a href="@Url.Action("Login", "Auth")">Войти</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer__container">

            <div class="footer__top">
                <div class="footer__logo">Ярославский юрист</div>

                <div class="footer__social">
                    <a href="https://web.telegram.org/" class="footer__telegram">
                        <img src="~/img/tg.png" />
                    </a>
                    <a href="#" class="footer__instagram">
                        <img src="~/img/instagram.png" />
                    </a>
                    <a href="https://vk.com/" class="footer__vk">
                        <img src="~/img/vk.png" />
                    </a>
                </div>
            </div>

            <div class="footer__contacts">
                <p class="footer__adress">
                    Ярославль, ул. Трефолева 12,<br />
                    Офис 5, 2 этаж
                </p>
                <p class="footer__info">
                    <a href="tel:84852664939">+7(4852)66-49-39</a>
                    <br />
                    <a href="mailto:info@yaroslavskiyurist.ru">info@yaroslavskiyurist.ru</a>
                </p>
                <p class="footer__schedule">
                    пн-пт: 09:00 - 19:00
                    <br />
                    сб: 11:00 - 16:00
                    <br />
                    вс: выходной
                </p>

            </div>
    </footer>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
